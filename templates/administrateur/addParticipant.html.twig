        </div>

            <div class="col-lg-3"></div>
    <div class="col-lg-2"></div>
             <div class="col-lg-1">
                 <a class="btn btn-secondary" href="{{ path('administrateur_accueilAdmin') }}">Retour</a>
            </div>
            <div class="col-lg-3">
                <input type="submit" class="btn btn-primary " value="Enregistrer">
            </div>

                 {{ form_end(pForm) }}

{% endblock %}