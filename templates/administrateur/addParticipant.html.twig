{% extends "base.html.twig" %}

{% block title %}
        ADD USER
{% endblock %}

{% block body %}


    <div style="margin-top: 5px " xmlns="http://www.w3.org/1999/html">


    <h1>Ajouter un participant</h1>
    <br/><br/>
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-4">
            {{ form_start(pForm) }}

            {{ form_row(pForm.pseudo) }}
