{% extends "base.html.twig" %}


{% block title %}Sortie index{% endblock %}

{% block body %}


    <div class="container-fluid" style="text-align: right;margin-top: 5px ">

        <div class="date">
            Date du jour : {{ "now"|date('d/m/y') }}
        </div>
        <div>
            Participant : {{ app.user.pseudo }}
        </div>

    </div>


    <div class="container-fluid" style="margin-left: 5px">
        <h4>Filtrer les sorties</h4>
        <div class="row">
            <div class="col-xl-5">
                {{ form_start(formTri) }}

                {{ form_row(formTri.campus) }}
                {{ form_row(formTri.q) }}
                {{ form_row(formTri.dateMin) }}  {{ form_row(formTri.dateMax) }}
            </div>
            <div class="col-xl-4">
                {{ form_row(formTri.organisateur) }}
                {{ form_row(formTri.inscrit) }}
                {{ form_row(formTri.pasInscrit) }}
                {{ form_row(formTri.passees) }}
            </div>
            <div class="col-xl-3">
                <button style="height:100px;width:200px; align-content:center ; margin-top: 100px; margin-left: -50px"
                        type="submit" class="btn-primary">Rechercher
                </button>
            </div>

            {{ form_end(formTri) }}
        </div>
    </div>
    <div style="margin-left: 10px ">
    <table class="container-fluid table table-striped " style="table-layout: fixed;margin-left: 20px; font-size: 25px;text-align: center ">
    <tr>
        <td>Nom de la sortie</td>
        <td>Date de la sortie</td>
        <td>Clôture</td>
        <td>inscrits/places</td>
        <td>Etat</td>
        <td>Inscrit</td>
        <td>Organisateur</td>
        <td>actions</td>

    </tr>
    </table>
    <div class="container-fluid overflow-auto " style="margin-left: 5px; margin-top: -15px; height: 350px">
        <table class="table table-striped " style="table-layout: fixed">
{#            <thead>#}
{#            <tr>#}
{#                <th>Nom de la sortie</th>#}
{#                <th>Date de la sortie</th>#}
{#                <th>Clôture</th>#}
{#                <th>inscrits/places</th>#}
{#                <th>Etat</th>#}
{#                <th>Inscrit</th>#}
{#                <th>Organisateur</th>#}
{#                <th>actions</th>#}
{#            </tr>#}
{#            </thead>#}
            <tbody>
            {% set  inscrit = false %}
            {% for sortie in sorties %}

                {% if sortie.etat.id == 1 and sortie.organisateur.id != app.user.id %}

                {% else %}
                    <tr style="text-align: center">
                        <td colspan="1">{{ sortie.nom }}</td>
                        <td colspan="1">{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d-m-Y H:i') : '' }}</td>
                        <td colspan="1">{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d-m-Y ') }}</td>
                        <td colspan="1">{{ sortie.participants | length }}/ {{ sortie.nbInscriptionsMax }}</td>
                        <td colspan="1">{{ sortie.etat.libelle }}</td>
                        <td colspan="1">{% for participant in sortie.participants %}
                                {% if participant.id == app.user.id %}
                                       X
                                    {% set inscrit = true %}
                                {% endif %}

                            {% endfor %}

                        </td>
                        <td colspan="1"><a
                                    href="{{ path('participant_show',{'id': sortie.organisateur.id}) }}">  {{ sortie.organisateur.pseudo }}
                        </td>
                        <td colspan="1">
                            {% if sortie.etat.id != 1 %}
                                <a href="{{ path('sortie_show', {'id': sortie.id}) }}">
                                    Afficher</a>
                            {% endif %}

                            {% if sortie.etat.id == 1 and sortie.organisateur.pseudo == app.user.pseudo %}
                                <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">
                                    Modifier</a>
                            {% endif %}

                            {% if  sortie.etat.id == 1 and sortie.organisateur.pseudo == app.user.pseudo %}
                                <a href="{{ path('sortie_show', {'id': sortie.id}) }}">
                                    Publier</a>
                            {% endif %}

                            {% if (sortie.etat.id == 2 or sortie.etat.id == 3) and inscrit == true %}
                                <a href="{{ path('sortie_unregistration', {'id': sortie.id}) }}">
                                    Se désister</a>
                            {% endif %}

                            {% if sortie.etat.id == 2 and inscrit == false %}<a
                                href="{{ path('sortie_registration', {'id': sortie.id}) }}">S'inscrire</a>
                            {% endif %}

                        </td>
                    </tr>
                    {#            {% else %}#}
                    {#                <tr>#}
                    {#                    <td  colspan="8">Aucune sortie trouvée</td>#}
                    {#                </tr>#}
                {% endif %}
                {% set inscrit = false %}
            {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
    <div class="row justify-content-center">
        <a class="btn btn-primary " style=" height: 40px; margin-top: 15px;text-align: center" href="{{ path('sortie_new') }}">Créer une
            sortie</a>
    </div>
{% endblock %}