{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>{{ participant.pseudo }}</h1>

    {% if participant.avatar %}
        <img src="{{ asset("uploads/avatars/"~participant.avatar) }}" alt="votre avatar" width="200px">
    {% else %}
        <img src="{{ asset('img/maxL.JPG') }}" alt="tÃªte de nerd" width="200px">
    {% endif %}

    <table class="table table-striped">
        <tbody>

            <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ participant.mail }}</td>
            </tr>
            <tr>
                <th>Campus</th>
                <td>{{ participant.campus.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('default_accueil') }}">Retour</a>
{% endblock %}
